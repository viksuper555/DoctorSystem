@using Microsoft.AspNetCore.Identity
@inject SignInManager<DefaultUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ask A Doc</title>
@*    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
@*    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DoctorSystem.styles.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/jquery.fancybox.css" />
	<link rel="stylesheet" href="~/css/jcarousel.css" />
	<link rel="stylesheet" href="~/css/flexslider.css" />
	<link rel="stylesheet" href="~/css/style.css" />

</head>
<body>
<div class="topbar">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <p class="pull-left hidden-xs">Ask A Doc</p>
      </div>
    </div>
  </div>
</div>
	<!-- start header -->
	<header>
        <div class="navbar navbar-default navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
										
					
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index" ><img id="logo" src="~/img/logo.png" alt="logo"/></a>
                </div>
                <div class="navbar-collapse collapse ">
                    <ul class="nav navbar-nav">
                        <li class="active"><a asp-controller="Home" asp-action="Index"></a>Начална страница</li> 
						 <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="dropdown-toggle">За нас <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="about.html">Our Hospital</a></li>
                            <li><a href="#">Our Team</a></li>
                            <li><a href="#">News</a></li> 
                            <li><a href="#">Investors</a></li>
                        </ul>
						</li>
						@if (User.IsInRole("Admin"))
						{
							<li><a asp-controller="RoleRequests" asp-action="Index">Requests</a></li>
						}
						@if (User.IsInRole("Patient"))
						{
							<li><a asp-controller="Posts" asp-action="Index">Досие</a></li>
						}
						@if(User.IsInRole("Doctor")||User.IsInRole("Admin"))
						{
							<li><a asp-controller="Posts" asp-action="Index">Случаи</a></li>
						}
						<li><a asp-controller="Home" asp-action="Privacy">Контакти</a></li>
            
						<partial name="_LoginPartial" />
						
                    </ul>
                </div>
            </div>
        </div>
	</header>
	<!-- end header -->
@*	<section id="banner">
    <div class="container">
        <main role="main" class="pb-3">*@
            @RenderBody()
@*        </main>
    </div>*@

    <footer>
	<div class="container">
		<div class="row">
			<div class="col-lg-3">
				<div class="widget">
					<h5 class="widgetheading">Quick Links</h5>
					<ul class="link-list">
						<li><a href="#">Latest Events</a></li>
						<li><a href="#">Terms and conditions</a></li>
						<li><a href="#">Privacy policy</a></li>
						<li><a href="#">Career</a></li>
						<li><a href="#">Contact us</a></li>
					</ul>
				</div>
			</div>
				
		</div>
		</div>
