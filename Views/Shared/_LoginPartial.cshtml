@using Microsoft.AspNetCore.Identity
@using DoctorSystem.Data

@inject SignInManager<DefaultUser> SignInManager
@inject UserManager<DefaultUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name!</a>
    </li>
    <li>
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button class="btn btn-primary pull-right" type="submit">Изход</button>
        </form>
    </li>
}
else
{
    <li>
        <a asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
    </li>
    <li>
        <a asp-area="Identity" asp-page="/Account/Login">Вход</a>
    </li>
}
